{
    "version": 2,
    "builds": [
      {
        "src": "src/index.ts",  
        "use": "@vercel/node"    
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",    
        "dest": "/src/server.ts"  
      }
    ],
    "functions": {
      "api/**/*.ts": {
        "runtime": "nodejs14.x" 
      }
    }
  }
  